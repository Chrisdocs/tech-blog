<article class="edit-section">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="edit-title-div">
      <label for="post-title" class="editTitle">Title</label>
      <input class="editTitleBox" name="post-title" type="text" value="{{post.post_title}}" />
    </div>
    <div class="edit-content-div">
      <label class="editContentTitle" for="post-text">Content</label>
      <textarea class="editContentBox" id="post-text" rows="5" name="post-text"></textarea>
    </div>
    <div>
      Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="editBtn" type="submit">Save post</button>
    <button class="editBtn" type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea class="addCommentBox" name="comment-body"></textarea>
  </div>

  <div>
    <button class="editBtn" type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>