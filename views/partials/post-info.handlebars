    <div class="post-border-div">
    <article class="post">
      <div class="title">
        <h3>{{post_title}}</h3>
      </div>
      <div class="post-text">
        {{post_text}}
      </div>
      <div class="meta">
        <div class="created-by">
        Created by {{user.username}} on
        {{format_date created_at}}
        </div>
        <a class="comments-a" href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
    </div>